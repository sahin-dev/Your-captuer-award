type LevelRequirement {
  title    String
  required Int
}

type Badge {
  type  String
  param String
}

enum LevelName {
  APPRENTICE
  STUDENT
  TRAINED
  TALENTED
  CONTENDER
  VIRTUOSO
  LEADER
  AVANTGARDE
  PRO
}

enum VoteType {
  Promoted
  Organic
}

enum UserRole {
  USER
  ADMIN
}

enum OtpStatus {
  CREATED
  VALIDATED
}

type PhotoStats {
  Composition Int @default(0)
  Content     Int @default(0)
  Creativity  Int @default(0)
  Technique   Int @default(0)
}
