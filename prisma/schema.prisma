generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id    String      @id @db.ObjectId  @default(auto()) @map("_id") 
  avatar  String?   @default("https://plus.unsplash.com/premium_photo-1689539137236-b68e436248de?q=80&w=1171&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D")
  firstName   String
  lastName    String
  username    String?
  phone       String @unique
  email       String @unique
  password    String
  role        UserRole  @default(USER)
  accessToken String?

  otps    Otp?


  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("users")
}

model Otp {
  id      String    @id @db.ObjectId  @default(auto()) @map("_id") 
  code    String    
  expires_in  DateTime
  userId  String    @db.ObjectId  @unique

  user    User  @relation(fields: [userId], references: [id])



  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  expiresAt   DateTime    

  @@map("otps")
}

enum UserRole {
  USER
  ADMIN
}

enum OtpStatus {
  CREATED
}