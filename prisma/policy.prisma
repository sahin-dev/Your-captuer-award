model SitePolicy {
    id        String      @id @default(auto()) @map("_id") @db.ObjectId
    type      SitePolicyType
    content   String
    
    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt
   
    @@map("site_policies")
}

enum SitePolicyType {
  TERMS
  POLICY
  ABOUT
}