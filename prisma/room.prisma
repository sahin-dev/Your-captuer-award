model Room {
    id        String      @id  @default(auto())  @map("_id") @db.ObjectId

    @@map("rooms")
}
model Chat {
    id        String      @id  @default(auto())  @map("_id") @db.ObjectId
    roomId    String      @db.ObjectId
    senderId  String      @db.ObjectId
    receiverId String     @db.ObjectId
    message   String
    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt
    

    @@map("chats")
}