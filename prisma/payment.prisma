model Payment {
    id             String        @id @default(auto()) @map("_id") @db.ObjectId
    status  PaymentStatus
    productId       String  @db.ObjectId
    userId          String  @db.ObjectId
    stripe_intent_id    String?     
    amount          Float
    currency        String
    method          String
    createdAt  DateTime     @default(now())
    updatedAt DateTime      @updatedAt

    @@map("payments")      
}

enum PaymentStatus {
    PENDING
    SUCCEEDED
}